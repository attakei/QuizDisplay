div(class='col-md-1', onClick=this.props.tryAnswer, data-playerid=this.props.player.id)
    if this.props.player.isAnswer
        p(class='text-center', style={backgroundColor: 'yellow'})= (this.props.player.id)
    else
        p(class='text-center')= (this.props.player.id)
    p(className='text-center')= (this.props.player.name)
    //- TODO: カラーリングは後でLESSに書く
    p(className='text-center', style={fontWeight:'bold', color:'blue'})= (this.props.player.displayPositive())
    p(className='text-center', style={fontWeight:'bold', color:'red'})= (this.props.player.displayNegative())
