div
  nav(class='navbar navbar-default')
    div(class='container-fluid')
      div(class='navbar-header')
        div(class='navbar-brand')
          strong= props.programName
      div(class='collapse navbar-collapse')
        ul(class='nav navbar-nav navbar-right')
          li
            a= props.quizCount + '問経過'
          li(class='dropdown')
            a(class='dropdown-toggle', data-toggle='dropdown', role='button' aria-haspopup='true' aria-expanded='false')
              | menu
              span(class='caret')/
            ul(class='dropdown-menu')
              //- li: a 全リセット
              li: a(onClick=endProgress) 終了


  div(class='container')
    div(class='row')
      each player in props.players
        if player.name != ''
          Player(player=player, rule=props.rule)
    div(class='row')
      hr
    JudgePanel(resetAnswer=resetAnswer, answerRight=answerRight, answerWrong=answerWrong, throughAnswer=throughAnswer)
    //- ViewControlPanel

  BootstrapFooter
